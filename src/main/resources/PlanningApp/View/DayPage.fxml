<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="PlanningApp.Controller.DayController" maxWidth="600" style="-fx-padding: 20 0 0 20">
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 10;">

            <Label fx:id="titleLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;-fx-text-fill: #0598FF;" />

            <ImageView fitHeight="50.0" fitWidth="40.0" layoutX="35.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../Assets/to-do-list.png" />
                </image>
            </ImageView>
        </HBox>
    </top>
    <left>
        <HBox style="-fx-padding: 10;">
            <GridPane style="-fx-border-color: #0598FF; -fx-border-width: 2px; -fx-border-radius: 10px;">
                <VBox spacing="10">
                    <Label text="TimeSlots" textFill="#0598FF" style="-fx-font-weight: bold; -fx-padding: 0 0 0 70" />
                    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" fitToHeight="true" prefWidth="250" style="-fx-padding: 10 10 10 10">
                        <content>
                            <VBox fx:id="timeslotPane" spacing="10" maxWidth="300" />
                        </content>
                    </ScrollPane>
                </VBox>
            </GridPane>
        </HBox>
    </left>
    <center>
        <HBox style="-fx-padding: 10;">
            <GridPane style="-fx-border-color: #0598FF; -fx-border-width: 2px; -fx-border-radius: 10px;">
                <VBox spacing="10">
                    <Label text="Tasks" textFill="#0598FF" style="-fx-font-weight: bold; -fx-padding: 0 0 0 110" />
                    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" prefWidth="250"  style="-fx-padding: 10 10 10 10">
                        <content>
                            <VBox fx:id="taskPane" spacing="10" maxWidth="300"/>
                        </content>
                    </ScrollPane>
                </VBox>
            </GridPane>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Button text="+ Add Task"     onAction="#AddTask" style="-fx-cursor: hand; -fx-background-color: #0598FF; -fx-border-radius: 5px; -fx-text-fill: white;" />
            <Button text="+ Add TimeSlot" onAction="#AddTimeslot" style="-fx-cursor: hand; -fx-background-color: #0598FF; -fx-border-radius: 5px; -fx-text-fill: white;" />
        </HBox>
    </bottom>


</BorderPane>